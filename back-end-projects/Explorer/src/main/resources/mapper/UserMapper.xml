<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.ontio.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="com.github.ontio.model.dao.User">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="ont_id" jdbcType="VARCHAR" property="ontId" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="last_login_time" jdbcType="TIMESTAMP" property="lastLoginTime" />
  </resultMap>


  <update id="saveUser" parameterType="com.github.ontio.model.dao.User">
    INSERT INTO tbl_user
    (
    ont_id,
    user_name,
    email,
    create_time,
    last_login_time
    )
    VALUES
    (
      #{ontId},
      #{userName},
      #{email},
      #{createTime},
      #{lastLoginTime}
    )
    ON DUPLICATE KEY UPDATE
    user_name=values(user_name),
    email=values(email),
    last_login_time=values(last_login_time)
  </update>

</mapper>